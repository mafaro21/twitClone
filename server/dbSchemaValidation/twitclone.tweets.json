{
  "$jsonSchema": {
    "bsonType": "object",
    "additionalProperties": false,
    "required": [
      "byUserId",
      "content",
      "dateposted",
      "likes",
      "comments"
    ],
    "properties": {
      "_id": {},
      "byUserId": {
        "bsonType": "objectId",
        "description": "Pointer to user who tweeted"
      },
      "content": {
        "bsonType": "string",
        "description": "Main body of the tweet",
        "maxLength": 280
      },
      "likes": {
        "bsonType": "int",
        "description": "Count of likes",
        "minimum": 0
      },
      "comments": {
        "bsonType": "int",
        "description": "Count of comments",
        "minimum": 0
      },
      "retweets": {
        "bsonType": "int",
        "description": "count of retweets",
        "minimum": 0
      },
      "dateposted": {
        "bsonType": "date",
        "description": "date of tweet posted"
      }
    }
  },
  "$and": [
    {
      "content": {
        "$regex": "[^><]+",
        "$options": "gi"
      }
    }
  ]
}